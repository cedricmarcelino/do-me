<%= render partial: "shared/header", locals: {title: "Profile"} %>
<div class="flex flex-col grow p-4">
  <%= form_with scope: :user, url: "/users/#{@user.id}", method: 'post' do |f| %>
    
        <div class="field">
          <%= f.label :email , class: "font-semibold text-lg"%><br />
          <%= f.email_field :email, value: @user.email, class: "bg-slate-50 border-0 w-full p-0"%>
        </div>

        <div class="field">
          <%= f.label :first_name , class: "font-semibold text-lg"%><br />
          <%= f.text_field :first_name, value: @user.first_name, class: "bg-slate-50 border-0 w-full p-0" %>
        </div>

        <div class="field">
          <%= f.label :last_name , class: "font-semibold text-lg"%><br />
          <%= f.text_field :last_name, value: @user.last_name, class: "bg-slate-50 border-0 w-full p-0" %>
        </div>
      <div class="text-center">
        <%= f.submit "Save Changes", class: "bg-sky-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full w-8/12 m-auto mt-2" %>
      </div>
      <%= link_to "Discard Changes", user_path(user_id: current_user.id), class: "bg-sky-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full w-8/12 m-auto block text-center mt-2" %>
  <% end %>
</div>
<%= render partial: "shared/footer", locals: {tab: "settings"} %>