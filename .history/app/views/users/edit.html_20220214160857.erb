<%= render partial: "shared/header", locals: {title: "Profile"} %>
<div class="flex flex-col grow p-4">
  <%= form_with(model: @user, class: "contents") do |f| %>
    
        <div class="field">
          <%= f.email_field :email, value: @user.email, class: "bg-slate-50 border-0 w-full"%>
        </div>

        <div class="field">
          <%= f.text_field :first_name, value: @user.first_name, class: "bg-slate-50 border-0 w-full" %>
        </div>

        <div class="field">
          <%= f.text_field :last_name, value: @user.last_name, class: "bg-slate-50 border-0 w-full" %>
        </div>


    <%= f.submit "Save Changes", class: "bg-sky-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full w-8/12 m-auto" %>
    <%= link_to "Back", root_path, class: "bg-sky-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded-full w-8/12 m-auto block text-center" %>
  <% end %>
</div>
<%= render partial: "shared/footer", locals: {tab: "settings"} %>