<%= render partial: "shared/header", locals: {title: "Add category"} %>

<div class="flex flex-col grow p-4">
  <%= form_with scope: :category, class: "contents", url: "/users/#{current_user.id}/categories" do |f| %>
    
        <div class="field">
          <%= f.label :name , class: "font-semibold text-lg"%><br />
          <%= f.text_field :name, class: "w-full" %>
        </div>

        <div class="field">
          <%= f.label :description , class: "font-semibold text-lg"%><br />
          <%= f.text_area :description %>
        </div>

  <% end %>
</div>

<%= render partial: "shared/footer", locals: {tab: "tasks"} %>
