<%= render partial: "shared/header", locals: {title: "Categories"} %>
<div class="flex flex-col grow p-4">
    <div class="categories-container flex flex-wrap justify-around">
        <% @categories.each do |category|%>
            <div class="max-w-sm rounded overflow-hidden shadow-lg w-5/12 h-32 flex flex-col text-center justify-center font-semibold">
                <span><%=category.name%></span>
            </div>
        <%end%>

        <div class="max-w-sm rounded overflow-hidden shadow-lg w-5/12 h-32 flex flex-col text-center justify-center">
            <i class="fas fa-plus-circle"></i>
        </div>

    </div>
</div>
<%= render partial: "shared/footer", locals: {tab: "tasks"} %>