<%= render partial: "shared/header", locals: {title: "Due Tasks"} %>


<div class="flex flex-col grow p-4">
  <% @due_tasks.each do |task|%>
    <div class="flex justify-between border-b border-gray-300 border-solid mb-1 pb-1 text-lg">
      <div>
        <a class="<%= task.is_done ? "line-through" : ""%>" href="<%= category_task_path(category_id: task.category_id, id: task.id) %>"><%= task.name %></a>
      </div>
      <div>
        <a class="fas fa-edit" href="<%= category_task_path(category_id: task.category_id, id: task.id) %>"></a>
        <a class="fas fa-trash" href="/categories/<%=task.category_id%>/tasks/<%=task.id%>" data-method="delete" data-confirm="Are you sure you want to delete this task?"></a>
      </div>
    </div>
  <%end%>
</div>

<%= render partial: "shared/footer", locals: {tab: "tasks"} %>